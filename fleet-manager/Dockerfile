# Run the container with `docker run -p 3000:3000 -t fleet-manager`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system fleet-manager && \
          adduser --system -G fleet-manager fleet-manager

COPY dist/fleet-manager fleet-manager
RUN chown -R fleet-manager:fleet-manager .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix fleet-manager --omit=dev -f install

CMD [ "node", "fleet-manager" ]
